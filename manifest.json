{
  "manifest_version": 2,

  "name": "CatChat",
  "description": "Dank memes",
  "version": "1.0",

  "content_scripts": [
    {
      "css": [ "popup.css" ],
      "matches": ["https://www.messenger.com/*"],
      "js": ["jquery-2.1.4.min.js","inside_job.js"]
    }
  ],

  "background": {
    "scripts": ["jquery-2.1.4.min.js","background.js"]
  },

  "permissions": [
    "http://thecatapi.com/"
  ],

  "web_accessible_resources":
    [
      "img/logo-clear.png",
      "img/logo-hover.png",
      "popup.html",
      "fonts/impact.eot",
      "fonts/impact.svg",
      "fonts/impact.ttf",
      "fonts/impact.woff"
    ]
}
